<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".SplashScreen"
    android:orientation="vertical" 
    android:background="@drawable/bg_app">

    <ImageView
        android:id="@+id/img_signUP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_signup_tapstate"
        android:layout_gravity="right"
        android:layout_margin="5dp" 
        android:onClick="onSignUP"/>
    
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/app_logo"
        android:layout_gravity="center_horizontal" />

	   
	        
	        <EditText
		        android:id="@+id/edt_userName"
		        android:layout_width="fill_parent"
		        android:layout_height="45dp"
		        android:inputType="number"
		        android:layout_gravity="center_horizontal|center" 
		        android:hint="@string/hint_userName"
		        android:background="@drawable/edit_textstyle"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginBottom="10dp"
		        android:singleLine="true">
		        <requestFocus />
		    </EditText>
		    
	        <EditText
		        android:id="@+id/edt_password"
		        android:layout_width="fill_parent"
		        android:layout_height="45dp"
		        android:inputType="textPassword"
		        android:layout_gravity="center_horizontal|center"
		        android:hint="@string/hint_password"
		        android:background="@drawable/edit_textstyle"
		        android:layout_margin="10dp"
		        android:singleLine="true">
		        <requestFocus />
		    </EditText>

	        <ImageView
	            android:id="@+id/btn_login"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:src="@drawable/btn_login"
	        	android:layout_gravity="center_horizontal|center"
	        	android:layout_margin="10dp"
	        	android:onClick="onLogin"/>
		        
	        <ImageView
	            android:id="@+id/btn_forgotpass"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/btn_forgot_password_tapstate"
		        android:layout_gravity="right" 
		        android:layout_margin="10dp"
		        android:onClick="onForgotPassword"/>

	        
	        
	        <include 
				    layout="@layout/activity_footer_screen"     
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>
	              
	    </LinearLayout>

    
